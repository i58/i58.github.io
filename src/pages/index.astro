<style>
	.hero {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 3rem;
		align-items: center;
		margin-bottom: 4rem;
		padding: 2rem 0;
	}

	.hero-content h1 {
		font-size: 3.5rem;
		margin-bottom: 1rem;
		background: linear-gradient(135deg, var(--accent), #ff8a80);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.hero-subtitle {
		font-size: 1.5rem;
		color: rgb(var(--gray));
		margin-bottom: 2rem;
	}

	.hero-buttons {
		display: flex;
		gap: 1rem;
	}

	.btn-primary, .btn-secondary {
		padding: 1rem 2rem;
		border-radius: 50px;
		text-decoration: none;
		font-weight: 700;
		transition: all 0.3s ease;
		display: inline-block;
	}

	.btn-primary {
		background: linear-gradient(135deg, var(--accent), #ff8a80);
		color: white;
		box-shadow: 0 4px 15px rgba(255, 111, 145, 0.3);
	}

	.btn-primary:hover {
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(255, 111, 145, 0.4);
	}

	.btn-secondary {
		background: transparent;
		color: var(--accent);
		border: 2px solid var(--accent);
	}

	.btn-secondary:hover {
		background: var(--accent);
		color: white;
	}

	.hero-image img {
		width: 100%;
		height: 400px;
		object-fit: cover;
		border-radius: 20px;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
	}

	.services {
		margin-bottom: 4rem;
	}

	.services h2 {
		text-align: center;
		margin-bottom: 3rem;
		font-size: 2.5rem;
	}

	.services-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.service-card {
		background: white;
		border-radius: 20px;
		overflow: hidden;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
		transition: transform 0.3s ease;
	}

	.service-card:hover {
		transform: translateY(-5px);
	}

	.service-card img {
		width: 100%;
		height: 200px;
		object-fit: cover;
	}

	.service-card h3 {
		padding: 1.5rem 1.5rem 0.5rem;
		color: var(--accent);
	}

	.service-card p {
		padding: 0 1.5rem 1.5rem;
		color: rgb(var(--gray));
	}

	.why-choose-us {
		background: linear-gradient(135deg, #fff5f5, #ffe8e8);
		padding: 4rem 2rem;
		border-radius: 30px;
		margin-bottom: 4rem;
	}

	.why-choose-us h2 {
		text-align: center;
		margin-bottom: 3rem;
		font-size: 2.5rem;
	}

	.features {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}

	.feature {
		text-align: center;
		padding: 2rem;
	}

	.feature-icon {
		font-size: 3rem;
		margin-bottom: 1rem;
	}

	.feature h3 {
		color: var(--accent);
		margin-bottom: 1rem;
	}

	.feature p {
		color: rgb(var(--gray));
	}

	.cta-section {
		background: linear-gradient(135deg, var(--accent), #ff8a80);
		color: white;
		padding: 4rem 2rem;
		border-radius: 30px;
		text-align: center;
	}

	.cta-content h2 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.cta-content p {
		font-size: 1.2rem;
		margin-bottom: 2rem;
		opacity: 0.9;
	}

	.cta-section .btn-primary {
		background: white;
		color: var(--accent);
	}

	.cta-section .btn-primary:hover {
		background: #f5f5f5;
	}

	@media (max-width: 768px) {
		.hero {
			grid-template-columns: 1fr;
			text-align: center;
			gap: 2rem;
			padding: 1rem 0;
		}

		.hero-content h1 {
			font-size: 2.5rem;
			margin-bottom: 1rem;
		}

		.hero-subtitle {
			font-size: 1.2rem;
			margin-bottom: 1.5rem;
		}

		.hero-buttons {
			justify-content: center;
			flex-wrap: wrap;
			gap: 0.8rem;
		}

		.btn-primary, .btn-secondary {
			padding: 0.8rem 1.5rem;
			font-size: 0.9rem;
		}

		.hero-image img {
			height: 300px;
		}

		.services h2 {
			font-size: 2rem;
			margin-bottom: 2rem;
		}

		.services-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.service-card {
			margin: 0 0.5rem;
		}

		.why-choose-us {
			padding: 3rem 1rem;
			margin: 0 0.5rem 3rem;
		}

		.why-choose-us h2 {
			font-size: 2rem;
			margin-bottom: 2rem;
		}

		.features {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.feature {
			padding: 1.5rem;
		}

		.cta-section {
			padding: 3rem 1rem;
			margin: 0 0.5rem;
		}

		.cta-content h2 {
			font-size: 2rem;
		}

		.cta-content p {
			font-size: 1.1rem;
		}
	}

	@media (max-width: 480px) {
		.hero-content h1 {
			font-size: 2rem;
		}

		.hero-subtitle {
			font-size: 1rem;
		}

		.hero-image img {
			height: 250px;
		}

		.services h2 {
			font-size: 1.8rem;
		}

		.why-choose-us h2 {
			font-size: 1.8rem;
		}

		.cta-content h2 {
			font-size: 1.8rem;
		}

		.btn-primary, .btn-secondary {
			padding: 0.7rem 1.2rem;
			font-size: 0.85rem;
		}
	}
</style>
